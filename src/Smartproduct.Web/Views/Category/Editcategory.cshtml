@model Smartproduct.Model.Category.Category
@{
    ViewData["Title"] = "New category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- ========== MAIN ========== -->
<main id="content" role="main" class="main">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-end">
                <div class="col-sm mb-2 mb-sm-0">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-no-gutter">
                            <li class="breadcrumb-item"><a class="breadcrumb-link" href="javascript:;">Administration</a></li>
                            <li class="breadcrumb-item"><a class="breadcrumb-link" href="javascript:;">Category</a></li>

                        </ol>
                    </nav>

                    <h1 class="page-header-title">New category</h1>
                </div>
            </div>
            <!-- End Row -->
        </div>
    </div>
    <!-- End Breadcrumb Section -->
    <!-- Content Section -->
    <div class="content container-fluid my-n9">
        <form class="js-validate" id="form1" method="post" asp-action="Editcategory" asp-controller="Category">
            <div class="card">
                <div class="card-header">
                    <p class="card-header-title">Editing category</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- Form Group -->
                            <div class="form-group">
                                <label for="txtName" class="input-label">Name</label>
                                <div class="js-form-message mb-3">
                                    <input id="txtName" type="text" class="form-control" required
                                           data-msg="Please enter a category name." placeholder="Category name" aria-label="Current Value" asp-for="Name">
                                    <span style="color:#ed4c78;font-size: 80%;" id="CellError">@Model.Errormessage1</span>
                                </div>
                            </div>
                            <!-- End Form Group -->
                        </div>

                        <div class="col-sm-6">
                            <!-- Form Group -->
                            <div class="form-group">
                                <label for="txtCategoryCode" class="input-label">Category code</label>
                                <div class="js-form-message mb-3">
                                    <input id="txtCategoryCode" type="text" class="form-control" required
                                           data-msg="Please enter a category code." maxlength="6" placeholder="Category code" aria-label="Current Value" asp-for="CategoryCode">
                                    <span style="color:#ed4c78;font-size: 80%;">@Model.Errormessage2</span>
                                    <span style="color:#ed4c78;font-size: 80%;">@Model.Errormessage3</span>
                                </div>
                            </div>
                            <!-- End Form Group -->
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-6">
                            <!-- Form Group -->
                            <div class="form-group">
                                <label for="chkActive" class="input-label">Active?</label>
                                <div class="js-form-message mb-3">
                                    <div class="custom-control custom-checkbox-switch mr-2">
                                        <input type="checkbox" id="chkActive" class="custom-control-input custom-checkbox-switch-input" asp-for="IsActive">
                                        <label class="custom-checkbox-switch-label btn" for="chkActive">
                                            <span class="custom-checkbox-switch-default">
                                                <i class="fas fa-recycle"></i> Inactive
                                            </span>
                                            <span class="custom-checkbox-switch-active">
                                                <i class="tio-done mr-1"></i> Active
                                            </span>
                                        </label>
                                    </div>
                                    <!-- End Checkbox -->
                                </div>
                            </div>
                            <!-- End Form Group -->
                        </div>
                    </div>
                    <div class="w-100"></div>
                    <input type="hidden" asp-for="@Model.CategoryId" />
                    <!-- End Form -->
                </div>
                <!-- Footer -->
                <div class="card-footer d-flex justify-content-end">
                    <a class="btn btn-white" href="@Url.Action("Currentcategories", "Category")">Cancel</a>
                    <input type="submit" value="Save" class="btn btn-primary ml-2" id="btnSave" />
                </div>
                <!-- End Footer -->
            </div>
        </form>
    </div>
    <!-- End Content Section -->
</main>
<!-- ========== END MAIN ========== -->
